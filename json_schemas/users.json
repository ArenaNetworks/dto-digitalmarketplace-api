{
  "title": "API Updater Schema",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 255,
      "minLength": 1
    },
    "emailAddress": {
      "type": "string",
      "pattern": "^[^@^\\s]+@[^@^\\.^\\s]+(\\.[^@^\\.^\\s]+)+$"
    },
    "password": {
      "type": "string",
      "maxLength": 255,
      "minLength": 10
    },
    "role": {
      "enum": ["buyer", "supplier", "admin", "admin-ccs-category", "admin-ccs-sourcing"]
    },
    "supplierId": {
      "type": "integer"
    },
    "hashpw": {
      "type": "boolean",
      "description": "set to False to skip password hashing"
    }
  },
  "required": [
    "name",
    "role",
    "emailAddress",
    "password"
  ]
}
