{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "title": "Application Schema",
    "additionalProperties": true,
    "properties": {
        "linkedin": {"type": ["string", "null"], "pattern": "^$|^http"},
        "website": {"type": ["string", "null"], "pattern": "^$|^http"},
        "products": {
            "oneOf": [{
                "type": "object",
                "patternProperties": {
                    ".*": {
                        "type": "object",
                        "properties": {
                            "pricing": {"type": "string", "pattern": "^http"},
                            "support": {"type": "string", "pattern": "^http"},
                            "website": {"type": "string", "pattern": "^http"}
                        }
                    }
                }
            }, {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "pricing": {"type": "string", "pattern": "^http"},
                        "support": {"type": "string", "pattern": "^http"},
                        "website": {"type": "string", "pattern": "^http"}
                    }
                }
            },{
                "type": "null"
            }]
        }
    }
}
