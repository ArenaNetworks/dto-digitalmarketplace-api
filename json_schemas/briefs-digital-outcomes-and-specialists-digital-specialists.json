{
  "$schema": "http://json-schema.org/schema#",
  "additionalProperties": false,
  "properties": {
    "additionalTerms": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,49}\\S+$)",
      "type": "string"
    },
    "backgroundInformation": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,99}\\S+$",
      "type": "string"
    },
    "contractLength": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "currentTechnologies": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,99}\\S+$)",
      "type": "string"
    },
    "essentialRequirements": {
      "items": {
        "maxLength": 100,
        "pattern": "^(?:\\S+\\s+){0,9}\\S+$",
        "type": "string"
      },
      "maxItems": 10,
      "minItems": 1,
      "type": "array"
    },
    "evaluationType": {
      "items": {
        "enum": [
          "provide a written proposal",
          "provide a case study or evidence of previous work",
          "presentation",
          "pitch"
        ]
      },
      "maxItems": 4,
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "importantDates": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,99}\\S+$",
      "type": "string"
    },
    "location": {
      "enum": [
        "Scotland",
        "North East England",
        "North West England",
        "Yorkshire and the Humber",
        "East Midlands",
        "West Midlands",
        "East of England",
        "Wales",
        "London",
        "South East England",
        "South West England",
        "Northern Ireland",
        "Offsite"
      ]
    },
    "niceToHaveRequirements": {
      "items": {
        "maxLength": 100,
        "pattern": "^(?:\\S+\\s+){0,9}\\S+$",
        "type": "string"
      },
      "maxItems": 10,
      "minItems": 0,
      "type": "array"
    },
    "organisation": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "specialistRole": {
      "enum": [
        "agile_coach",
        "business_analyst",
        "communications_manager",
        "content_designer",
        "cyber_security_consultant",
        "delivery_manager",
        "designer",
        "developer",
        "portfolio_manager",
        "product_manager",
        "programme_manager",
        "quality_assurance_analyst",
        "service_manager",
        "user_researcher",
        "web_operations_engineer"
      ]
    },
    "startDate": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "title": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "workingArrangements": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,49}\\S+$)",
      "type": "string"
    }
  },
  "required": [
    "backgroundInformation",
    "contractLength",
    "essentialRequirements",
    "evaluationType",
    "importantDates",
    "location",
    "organisation",
    "specialistRole",
    "startDate",
    "title"
  ],
  "title": "Digital Outcomes and Specialists Digital specialists Brief Schema",
  "type": "object"
}
