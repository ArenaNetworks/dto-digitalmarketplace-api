{
  "$schema": "http://json-schema.org/schema#",
  "additionalProperties": false,
  "properties": {
    "additionalTerms": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,49}\\S+$)",
      "type": "string"
    },
    "backgroundInformation": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,99}\\S+$",
      "type": "string"
    },
    "contractLength": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "currentTechnologies": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,99}\\S+$)",
      "type": "string"
    },
    "essentialRequirements": {
      "items": {
        "maxLength": 100,
        "pattern": "^(?:\\S+\\s+){0,9}\\S+$",
        "type": "string"
      },
      "maxItems": 10,
      "minItems": 1,
      "type": "array"
    },
    "evaluationType": {
      "items": {
        "enum": [
          "provide a written proposal",
          "provide a case study or evidence of previous work",
          "presentation",
          "pitch"
        ]
      },
      "maxItems": 4,
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "expectedOutcomes": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,99}\\S+$)",
      "type": "string"
    },
    "importantDates": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,99}\\S+$",
      "type": "string"
    },
    "location": {
      "enum": [
        "Scotland",
        "North East England",
        "North West England",
        "Yorkshire and the Humber",
        "East Midlands",
        "West Midlands",
        "East of England",
        "Wales",
        "London",
        "South East England",
        "South West England",
        "Northern Ireland",
        "Offsite"
      ]
    },
    "niceToHaveRequirements": {
      "items": {
        "maxLength": 100,
        "pattern": "^(?:\\S+\\s+){0,9}\\S+$",
        "type": "string"
      },
      "maxItems": 10,
      "minItems": 0,
      "type": "array"
    },
    "organisation": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "outcome": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,49}\\S+$",
      "type": "string"
    },
    "phase": {
      "enum": [
        "Not started",
        "Discovery",
        "Alpha",
        "Beta",
        "Live"
      ]
    },
    "startDate": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "successCriteria": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,99}\\S+$",
      "type": "string"
    },
    "title": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "userNeeds": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,99}\\S+$",
      "type": "string"
    },
    "users": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,99}\\S+$",
      "type": "string"
    },
    "workingArrangements": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,49}\\S+$)",
      "type": "string"
    }
  },
  "required": [
    "backgroundInformation",
    "contractLength",
    "essentialRequirements",
    "evaluationType",
    "importantDates",
    "location",
    "organisation",
    "outcome",
    "startDate",
    "successCriteria",
    "title",
    "userNeeds",
    "users"
  ],
  "title": "Digital Outcomes and Specialists Digital outcomes Brief Schema",
  "type": "object"
}
